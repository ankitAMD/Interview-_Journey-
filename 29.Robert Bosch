#include <iostream>

using namespace std;
int i;
void pattern(int n)
{
    for(int i=1;i<n;i++)
    {
        cout<<i;
        for(int j=i;j>1;j--)
        {
            cout<<"*"<<i;
        }
    cout<<endl;   
    }
    
   for(int k=n-1;k>0;k--)
    {
        cout<<k;
        for(int r=k;r>1;r--)
        {
            cout<<"*"<<k;
        }
    cout<<endl;    
    }
}


int main()
{
    pattern(5);

    return 0;
    
}




#include <iostream>

using namespace std;
int i;
void pattern(int n)
{
    for(int i=1;i<n;i++)
    {
        cout<<i;
        for(int j=i;j>1;j--)
        {
            cout<<"*"<<i;
        }
    cout<<endl;   
    }
    
   for(int k=n-1;k>0;k--)
    {
        cout<<k;
        for(int r=k;r>1;r--)
        {
            cout<<"*"<<k;
        }
    cout<<endl;    
    }
}


int main()
{
    pattern(5);

    return 0;
    
}



